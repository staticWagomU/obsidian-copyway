{
	"name": "obsidian-sample-plugin",
	"version": "1.0.0",
	"description": "This is a sample plugin for Obsidian (https://obsidian.md)",
	"main": "main.js",
	"type": "module",
	"scripts": {
		"dev": "vite build --watch --mode development",
		"build": "tsc -noEmit -skipLibCheck && vite build --mode production",
		"test": "vitest",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"lint": "oxlint && eslint .",
		"lint:oxlint": "oxlint",
		"lint:eslint": "eslint .",
		"lint:fix": "oxlint --fix && eslint . --fix",
		"format": "oxfmt --write src/",
		"format:check": "oxfmt src/",
		"typecheck": "tsc --noEmit --skipLibCheck",
		"validate": "pnpm lint && pnpm typecheck && pnpm test:run && pnpm build",
		"setup:dev": "bash scripts/setup-dev.sh",
		"clean": "rm -f main.js main.js.map"
	},
	"keywords": [],
	"license": "0-BSD",
	"devDependencies": {
		"@eslint/js": "9.39.2",
		"@types/node": "^16.11.6",
		"@vitest/coverage-v8": "^4.0.16",
		"eslint": "^9.39.2",
		"eslint-plugin-obsidianmd": "0.1.9",
		"globals": "14.0.0",
		"jiti": "2.6.1",
		"jsdom": "^27.4.0",
		"lefthook": "^2.0.13",
		"oxfmt": "^0.26.0",
		"oxlint": "^1.38.0",
		"tslib": "2.8.1",
		"typescript": "^5.8.3",
		"typescript-eslint": "8.53.1",
		"vite": "npm:rolldown-vite@^7.3.1",
		"vitest": "^4.0.16"
	},
	"dependencies": {
		"obsidian": "latest"
	}
}
